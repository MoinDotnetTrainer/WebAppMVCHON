@model IEnumerable<WebAppMVCHON.Models.Users>

@{
    ViewData["Title"] = "UsersList";
}

<h1>UsersList</h1>

<p>
    <a asp-action="CreateUsers">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditUsers", "Usersops", new { UserId = item.UserId })|
                    @Html.ActionLink("Delete", "DeleteUsers", "Usersops", new { UserId = item.UserId })|
                    @Html.ActionLink("Details", "UserDetails", "Usersops", new { UserId = item.UserId })

                </td>
            </tr>
        }
    </tbody>
</table>
